<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }, html: { class: "devise-form"}) do |f| %>
 <h1 class="login--title">Sign Up</h1>

    <%= f.input :email, label: false,
                placeholder: 'Email address',
                input_html: { class: "devise-input" },
                wrapper_html: { class: "devise-wrapper" }, :autocomplete => "off"  %>

    <%= f.input :password, label: false,
                placeholder: 'Password',
                input_html: { class: "devise-input" },
                wrapper_html: { class: "devise-wrapper" }, :autocomplete => "off"  %>

    <%= f.input :password_confirmation, label: false,
                placeholder: 'Repeat Password',
                input_html: { class: "devise-input" },
                wrapper_html: { class: "devise-wrapper" }, :autocomplete => "off"  %>

    <%= f.button :submit, "Create an account", class: "devise-submit" %>

    <p class="devise-account">Already have an account? <span><%= link_to 'Login', new_session_path(resource_name) %></span></p>
<% end %>
