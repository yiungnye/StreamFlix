<%= simple_form_for(@movie, html: { class: "devise-form"}) do |f| %>
  <%= f.input :title, label: false,
                placeholder: 'Title',
                input_html: { class: "devise-input" },
                wrapper_html: { class: "devise-wrapper" } %>

  <%= f.input :description, label: false,
              placeholder: 'Description',
              input_html: { class: "devise-input" },
              wrapper_html: { class: "devise-wrapper" } %>

  <%= f.input :release_date, label: false,
              placeholder: 'Release_date',
              input_html: { class: "devise-input" },
              wrapper_html: { class: "devise-wrapper" } %>

  <%= f.input :photo, as: :file %>

  <%= f.button :submit, "Login to your account", class: "devise-submit" %>
<% end %>
